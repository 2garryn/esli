[
 {sli,	[
 	%% Path to html docs
 	 {docroot, "var/htdocs"},	

	%% Mochiweb server config
	 {web,     [{ip, {0,0,0,0}},{port, 8081}]},

	%% domain before short link id
	 {domain,  "http://localhost:8081"},

	%% Place where id file (to back next link id) is saved

	%% Riak config
	 {riak_host, '127.0.0.1'},
	 {riak_port, 8087},

	%% Amount of riak client processes
	 {worker_set, 10}

	]}, 
 %% SASL config
 {sasl, [
         {sasl_error_logger, {file, "log/sasl-error.log"}},
         {errlog_type, error},
         {error_logger_mf_dir, "log/sasl"},      % Log directory
         {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
         {error_logger_mf_maxfiles, 5}           % 5 files max
         ]}
].

